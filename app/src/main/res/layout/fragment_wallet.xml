<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.WalletFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/wallet_root_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/gift">

                <TextView
                    android:id="@+id/wallet_balance_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/Rs"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:padding="10dp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGrey"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Referral Code"
            android:textSize="14sp"
            android:gravity="start"
            android:textColor="@color/black"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16AFB2A1AC2"
            android:textSize="18sp"
            android:padding="15dp"
            android:gravity="center"
            android:textColor="@color/colorLightAccent"
            android:background="@drawable/dash_border_view"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/referral_message"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:layout_gravity="center"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:layout_margin="10dp"
            android:background="@color/colorLightOrange"
            android:textColor="@color/white"/>

    </LinearLayout>

</FrameLayout>